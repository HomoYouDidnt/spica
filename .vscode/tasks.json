{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "setup",
      "type": "shell",
      "command": "uv sync --dev --extra cpu"
    },
    {
      "label": "lint",
      "type": "shell",
      "command": "uvx ruff check ."
    },
    {
      "label": "validate",
      "type": "shell",
      "command": "uvx ruff check . && uvx black --check spica && uv run pytest -q --maxfail=1",
      "options": {
        "env": {
          "PYTHONUTF8": "1",
          "NANOCHAT_BASE_DIR": "${workspaceFolder}/.cache/nanochat",
          "PYTHONPATH": "${workspaceFolder}"
        }
      }
    },
    {
      "label": "run demo",
      "type": "shell",
      "command": "uv run python -m spica.demo --cells configs/cells/local.yaml",
      "options": {
        "env": {
          "PYTHONUTF8": "1",
          "PYTHONPATH": "${workspaceFolder}"
        }
      }
    }
  ]
}

